<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ajdin.navigatiodraer.Fragments.CartFragment">

    <!-- TODO: Update blank fragment layout -->

    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:layout_marginTop="6dp"
        android:id="@+id/listCart"></com.baoyz.swipemenulistview.SwipeMenuListView>
    <!--<ListView-->
    <!--android:id="@+id/listCart"-->
    <!--android:layout_marginTop="12dp"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginBottom="100dp"-->
    <!--&gt;</ListView>-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/emptyElement"
        android:visibility="gone"
        android:src="@drawable/empty_cart"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:gravity="center"

        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_gravity="bottom"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="80dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:text="UKUPNO :"
            android:textSize="20sp"
            android:layout_marginLeft="4dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent"
            android:text="0.00"
            android:paddingLeft="12dp"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_panel"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/zavrsi"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/accent"
            android:textColor="@color/primaryTtext"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginLeft="3dp"
            android:text="ZAVRŠI / POŠALJI" />

        <Button
            android:id="@+id/nastavi"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/accent"
            android:textColor="@color/primaryTtext"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:text="NASTAVI" />

        <Button
            android:id="@+id/clearAll"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="@color/accent"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryTtext"
            android:textSize="16sp"
            android:textStyle="normal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:text="ODUSTANI" />

    </LinearLayout>

</FrameLayout>
