<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/menu_frag"
    android:focusableInTouchMode="true"
    tools:context="com.example.ajdin.navigatiodraer.Fragments.MenuFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/emptyElementMenu"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:layout_marginTop="12dp"
        android:text="Uradite sinhronizaciju ! "
        android:textColor="#525252"
        android:textSize="19.0sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <SearchView
            android:id="@+id/simpleSearchView"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:focusable="false"
            android:layout_weight="0.7"
            android:iconifiedByDefault="false"
            android:queryHint="Pretrazi ovdje " />

        <TextView
            android:layout_width="0dp"
            android:id="@+id/brojRezulata"
            android:layout_height="80dp"
            android:textSize="22sp"
            android:text="broj"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"

            android:layout_weight="0.3" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:weightSum="1">


        <Spinner
            android:id="@+id/kategorySpinner"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.5"
            android:paddingLeft="16dp" />

        <Spinner
            android:id="@+id/simpleSpinner"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.5" />

    </LinearLayout>


    <!-- TODO: Update blank fragment layout -->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:id="@+id/lvMovies"

        />
</LinearLayout>
