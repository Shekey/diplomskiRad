<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivIconcart"
                android:layout_width="280dp"
                android:src="@drawable/nemaslike"
                android:layout_height="200dp" />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarcart"
                android:layout_gravity="center" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvCartItemName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:layout_marginBottom="0dp"
                android:textColor="@android:color/black"
                android:gravity="left"
                android:layout_marginTop="4dp"
                android:textSize="32sp"
                android:textAllCaps="true"
                android:textStyle="normal"
                android:text="NAZIV" />

            <!--<TextView-->
            <!--android:id="@+id/tvCartItemQuantity"-->
            <!--android:layout_width="0dip"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="0.2"-->
            <!--android:gravity="center"-->
            <!--android:textStyle="bold"-->
            <!--android:textColor="@android:color/black"-->
            <!--android:text=""/>-->

            <!--<TextView-->
            <!--android:id="@+id/tvCartItemUnitPrice"-->
            <!--android:layout_width="0dip"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="0.15"-->
            <!--android:textStyle="bold"-->

            <!--android:textColor="@android:color/black"-->
            <!--android:gravity="center"/>-->


            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="30sp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="8dp"
                android:textStyle="italic"
                android:paddingLeft="8dp"
                android:textColor="@color/colorPrimaryDark"
                android:paddingRight="4dp"
                android:gravity="left"
                android:text="Cijena" />

            <TextView
                android:id="@+id/tvKolicina"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="30sp"
                android:layout_marginBottom="6dp"
                android:textStyle="italic"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:gravity="left"
                android:textColor="@color/colorPrimaryDark"
                android:text="Kolicina" />

            <TextView
                android:id="@+id/tvCartItemTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="28sp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="0dp"
                android:textStyle="italic"
                android:paddingLeft="8dp"
                android:textColor="@color/colorAccent"
                android:paddingRight="1dp"
                android:gravity="left"
                android:text="UKUPNO" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
