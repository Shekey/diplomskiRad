<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context="com.example.ajdin.navigatiodraer.Fragments.CRUDFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/naslov_biljeske"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:text="Bilješka"

        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:hint="Ovdje počnite pisati ..."
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp"
        android:gravity="top"
        android:padding="10dp"
        android:id="@+id/EditText1" />

    <Button
        android:id="@+id/save_note"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/EditText1"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/primaryTtext"
        android:text="Snimi bilješku" />

</RelativeLayout>
